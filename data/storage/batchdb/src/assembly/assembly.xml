<?xml version="1.0" encoding="UTF-8"?>

<assembly>
  <id>release</id>
  <formats>
    <format>dir</format>
    <!--
    <format>tar.gz</format>
    <format>zip</format>
    -->
  </formats>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>org.headvances:headvances.lib.common</include>
        <include>org.headvances:headvances.storage.hadoop</include>

        <include>org.codehaus.jackson:jackson-core-asl</include>
        <include>org.codehaus.jackson:jackson-mapper-asl</include>

        <include>commons-cli:commons-cli</include>
        
        <include>org.apache.hadoop:hadoop-core</include>
        <include>org.apache.hadoop:hadoop-gpl-compression</include>

        <include>org.slf4j:slf4j-api</include>
        <include>org.slf4j:slf4j-simple</include>
        <include>org.slf4j:jcl-over-slf4j</include>
        <include>org.slf4j:log4j-over-slf4j</include>
     </includes>
    </dependencySet>
  </dependencySets>

  <fileSets>
    <fileSet>
      <directory>src/app</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
